<h1>新しいポートフォリオを作成</h1>

<%= form_with model: @portfolio, local: true, class: "row g-3" do |form| %>
  <% if @portfolio.errors.any? %>
    <div class="col-12">
      <div class="alert alert-danger">
        <h6><%= pluralize(@portfolio.errors.count, "error") %> prohibited this portfolio from being saved:</h6>
        <ul class="mb-0">
          <% @portfolio.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="col-12">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", placeholder: "ポートフォリオのタイトル" %>
  </div>

  <div class="col-12">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: 4, placeholder: "ポートフォリオの説明" %>
  </div>

  <div class="col-12">
    <div class="form-check">
      <%= form.check_box :is_public, class: "form-check-input" %>
      <%= form.label :is_public, "公開する", class: "form-check-label" %>
    </div>
  </div>

  <div class="col-12">
    <%= form.submit "作成", class: "btn btn-primary" %>
    <%= link_to "キャンセル", portfolios_path, class: "btn btn-secondary" %>
  </div>
<% end %>
