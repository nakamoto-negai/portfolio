<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>ポートフォリオ一覧</h1>
  <%= link_to "新規作成", new_portfolio_path, class: "btn btn-primary" %>
</div>

<div class="row">
  <% @portfolios.each do |portfolio| %>
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card h-100">
        <% if portfolio.thumbnail_slide&.image_url %>
          <img src="<%= portfolio.thumbnail_slide.image_url %>" class="card-img-top" alt="<%= portfolio.title %>" style="height: 200px; object-fit: cover;">
        <% else %>
          <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
            <i class="fas fa-image fa-3x text-muted"></i>
          </div>
        <% end %>
        
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= portfolio.title %></h5>
          <p class="card-text flex-grow-1"><%= truncate(portfolio.description, length: 100) %></p>
          
          <div class="mt-auto">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <small class="text-muted">
                <i class="fas fa-images"></i> <%= portfolio.slides_count %>枚
              </small>
              <small class="text-muted">
                <i class="fas fa-heart"></i> <%= portfolio.likes_count %>
              </small>
            </div>
            
            <div class="btn-group w-100" role="group">
              <%= link_to "表示", portfolio, class: "btn btn-outline-primary btn-sm" %>
              <%= link_to "スライドショー", portfolio_slideshow_path(portfolio), class: "btn btn-outline-success btn-sm" %>
              <%= link_to "編集", edit_portfolio_path(portfolio), class: "btn btn-outline-secondary btn-sm" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @portfolios.empty? %>
  <div class="text-center py-5">
    <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
    <h3 class="text-muted">ポートフォリオがありません</h3>
    <p class="text-muted">最初のポートフォリオを作成してみましょう！</p>
    <%= link_to "新規作成", new_portfolio_path, class: "btn btn-primary" %>
  </div>
<% end %>
