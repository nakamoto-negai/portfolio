<% content_for :head do %>
  <style>
    .main-image-container {
      max-height: 400px;
      overflow: hidden;
      border-radius: 8px;
      margin-bottom: 20px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    
    .main-image-container img {
      width: 100%;
      height: 400px;
      object-fit: cover;
    }
    
    .portfolio-header {
      border-bottom: 1px solid #dee2e6;
      padding-bottom: 15px;
      margin-bottom: 20px;
    }
    
    .info-card {
      background: #f8f9fa;
      border-radius: 8px;
      padding: 15px;
      margin-bottom: 20px;
    }
    
    .slide-thumbnail {
      height: 150px;
      object-fit: cover;
      border-radius: 4px;
    }
    
    .slide-card {
      transition: transform 0.2s ease;
    }
    
    .slide-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
  </style>
<% end %>

<div class="row">
  <div class="col-md-8">
    <!-- メイン画像表示 -->
    <% if @portfolio.has_main_image? %>
      <div class="main-image-container">
        <%= image_tag @portfolio.main_image, alt: @portfolio.title, class: "img-fluid" %>
      </div>
    <% end %>
    
    <!-- ポートフォリオヘッダー -->
    <div class="portfolio-header">
      <div class="d-flex justify-content-between align-items-start mb-3">
        <h1 class="mb-0"><%= @portfolio.title %></h1>
        <span class="badge fs-6 bg-<%= @portfolio.published? ? 'success' : 'secondary' %>">
          <i class="fas fa-<%= @portfolio.published? ? 'eye' : 'eye-slash' %> me-1"></i>
          <%= @portfolio.published? ? '公開中' : '非公開' %>
        </span>
      </div>
      
      <p class="lead text-muted"><%= @portfolio.description %></p>
      
      <!-- 統計情報 -->
      <div class="d-flex gap-3">
        <span class="badge bg-info">
          <i class="fas fa-images me-1"></i> <%= @portfolio.slides_count %>枚のスライド
        </span>
        <% if @portfolio.has_powerpoints? %>
          <span class="badge bg-warning">
            <i class="fas fa-file-powerpoint me-1"></i> <%= @portfolio.powerpoints_count %>個のPowerPoint
          </span>
        <% end %>
        <span class="badge bg-danger">
          <i class="fas fa-heart me-1"></i> <%= @portfolio.likes_count %>いいね
        </span>
      </div>
    </div>
    
    <!-- PowerPointファイル情報 -->
    <% if @portfolio.has_powerpoints? %>
      <div class="info-card">
        <div class="d-flex align-items-center mb-3">
          <i class="fas fa-file-powerpoint text-warning fa-lg me-2"></i>
          <h5 class="mb-0">PowerPointファイル</h5>
        </div>
        
        <div class="row">
          <div class="col-md-6">
            <div class="small text-muted mb-1">ファイル情報</div>
            <div><strong>ファイル数:</strong> <%= @portfolio.powerpoints_count %>個</div>
            <div><strong>合計サイズ:</strong> <%= @portfolio.total_powerpoint_size_human %></div>
          </div>
          <div class="col-md-6">
            <div class="small text-muted mb-1">最新ファイル</div>
            <div class="text-truncate" title="<%= @portfolio.latest_powerpoint_filename %>">
              <%= @portfolio.latest_powerpoint_filename || "なし" %>
            </div>
          </div>
        </div>
        
        <div class="mt-3">
          <%= link_to "PowerPointファイル一覧を見る", portfolio_powerpoints_path(@portfolio), 
                      class: "btn btn-outline-warning btn-sm" %>
        </div>
      </div>
    <% end %>
    
    <!-- スライド一覧 -->
    <div class="mb-4">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>スライド一覧 (<%= @portfolio.slides_count %>枚)</h3>
        <%= link_to "新しいスライドを追加", new_portfolio_slide_path(@portfolio), 
                    class: "btn btn-primary btn-sm" %>
      </div>
      
      <% if @portfolio.ordered_slides.any? %>
        <div class="row">
          <% @portfolio.ordered_slides.each do |slide| %>
            <div class="col-md-6 col-lg-4 mb-4">
              <div class="card slide-card h-100">
                <% if slide.image.attached? %>
                  <%= image_tag slide.image, class: "card-img-top slide-thumbnail", alt: "スライド #{slide.page_number}" %>
                <% else %>
                  <div class="card-img-top slide-thumbnail bg-light d-flex align-items-center justify-content-center">
                    <i class="fas fa-image fa-2x text-muted"></i>
                  </div>
                <% end %>
                
                <div class="card-body d-flex flex-column">
                  <h6 class="card-title">スライド <%= slide.page_number %></h6>
                  <div class="btn-group btn-group-sm mt-auto" role="group">
                    <%= link_to "表示", portfolio_slide_path(@portfolio, slide), 
                                class: "btn btn-outline-primary" %>
                    <%= link_to "編集", edit_slide_path(slide), 
                                class: "btn btn-outline-secondary" %>
                    <%= link_to "削除", slide, method: :delete, 
                                confirm: "スライド #{slide.page_number} を削除しますか？", 
                                class: "btn btn-outline-danger" %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-5">
          <i class="fas fa-images fa-3x text-muted mb-3"></i>
          <h4 class="text-muted">スライドがありません</h4>
          <p class="text-muted">最初のスライドを追加してポートフォリオを充実させましょう。</p>
          <%= link_to "最初のスライドを追加", new_portfolio_slide_path(@portfolio), 
                      class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
  
  <!-- サイドバー -->
  <div class="col-md-4">
    <div class="sticky-top" style="top: 20px;">
      <div class="card">
        <div class="card-header">
          <h6 class="mb-0">
            <i class="fas fa-cogs me-2"></i>
            アクション
          </h6>
        </div>
        <div class="card-body">
          <div class="d-grid gap-2">
            <!-- スライドショー -->
            <% if @portfolio.ordered_slides.any? %>
              <%= link_to slideshow_portfolio_path(@portfolio), 
                          class: "btn btn-success" do %>
                <i class="fas fa-play me-2"></i>スライドショー開始
              <% end %>
            <% else %>
              <button class="btn btn-success" disabled title="スライドがありません">
                <i class="fas fa-play me-2"></i>スライドショー開始
              </button>
            <% end %>
            
            <!-- PowerPointから画像抽出 -->
            <% if @portfolio.has_powerpoints? && !@portfolio.has_main_image? %>
              <%= button_to extract_main_image_portfolio_path(@portfolio), 
                            method: :post, class: "btn btn-info",
                            confirm: "PowerPointファイルから最初の画像を抽出してメイン画像に設定しますか？",
                            title: "PowerPointファイルから画像を抽出" do %>
                <i class="fas fa-image me-2"></i>画像を抽出
              <% end %>
            <% elsif @portfolio.has_powerpoints? && @portfolio.has_main_image? %>
              <button class="btn btn-outline-info" disabled title="メイン画像は既に設定されています">
                <i class="fas fa-check me-2"></i>画像設定済み
              </button>
            <% end %>
            
            <!-- PowerPointファイル管理 -->
            <% if @portfolio.has_powerpoints? %>
              <%= link_to portfolio_powerpoints_path(@portfolio), 
                          class: "btn btn-warning" do %>
                <i class="fas fa-file-powerpoint me-2"></i>PowerPoint管理
              <% end %>
            <% end %>
            
            <!-- 編集・削除 -->
            <%= link_to edit_portfolio_path(@portfolio), 
                        class: "btn btn-outline-secondary" do %>
              <i class="fas fa-edit me-2"></i>編集
            <% end %>
            
            <%= link_to @portfolio, method: :delete, 
                        confirm: "「#{@portfolio.title}」を完全に削除しますか？この操作は取り消せません。", 
                        class: "btn btn-outline-danger" do %>
              <i class="fas fa-trash me-2"></i>削除
            <% end %>
          </div>
        </div>
      </div>
      
      <!-- ポートフォリオ情報 -->
      <div class="card mt-3">
        <div class="card-header">
          <h6 class="mb-0">
            <i class="fas fa-info-circle me-2"></i>
            詳細情報
          </h6>
        </div>
        <div class="card-body">
          <div class="small">
            <div class="mb-2">
              <strong>作成日:</strong><br>
              <%= @portfolio.created_at.strftime("%Y年%m月%d日 %H:%M") %>
            </div>
            <div class="mb-2">
              <strong>更新日:</strong><br>
              <%= @portfolio.updated_at.strftime("%Y年%m月%d日 %H:%M") %>
            </div>
            <div class="mb-2">
              <strong>公開状態:</strong><br>
              <span class="badge bg-<%= @portfolio.published? ? 'success' : 'secondary' %>">
                <%= @portfolio.published? ? '公開中' : '非公開' %>
              </span>
            </div>
            <% if @portfolio.has_main_image? %>
              <div class="mb-2">
                <strong>メイン画像:</strong><br>
                <span class="badge bg-success">設定済み</span>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- ナビゲーション -->
<div class="row mt-4">
  <div class="col-12">
    <nav aria-label="ポートフォリオナビゲーション">
      <div class="d-flex justify-content-between">
        <%= link_to portfolios_path, class: "btn btn-outline-primary" do %>
          <i class="fas fa-arrow-left me-2"></i>ポートフォリオ一覧に戻る
        <% end %>
        
        <div>
          <%= link_to new_portfolio_slide_path(@portfolio), class: "btn btn-primary" do %>
            <i class="fas fa-plus me-2"></i>新しいスライドを追加
          <% end %>
        </div>
      </div>
    </nav>
  </div>
</div>