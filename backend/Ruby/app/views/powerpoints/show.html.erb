<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header bg-orange text-white">
        <h4 class="mb-0">
          <i class="fas fa-file-powerpoint me-2"></i>
          <%= @powerpoint.filename %>
        </h4>
      </div>
      
      <div class="card-body">
        <div class="row mb-4">
          <div class="col-md-6">
            <h6>ファイル情報</h6>
            <table class="table table-sm">
              <tr>
                <td><strong>元ファイル名:</strong></td>
                <td><%= @powerpoint.original_filename %></td>
              </tr>
              <tr>
                <td><strong>ファイルサイズ:</strong></td>
                <td><%= number_to_human_size(@powerpoint.file_size) %></td>
              </tr>
              <tr>
                <td><strong>コンテンツタイプ:</strong></td>
                <td><%= @powerpoint.content_type %></td>
              </tr>
              <tr>
                <td><strong>作成日時:</strong></td>
                <td><%= @powerpoint.created_at.strftime("%Y年%m月%d日 %H:%M") %></td>
              </tr>
              <tr>
                <td><strong>種類:</strong></td>
                <td>
                  <span class="badge <%= @powerpoint.is_generated? ? 'bg-success' : 'bg-primary' %>">
                    <%= @powerpoint.is_generated? ? '生成されたファイル' : 'アップロードされたファイル' %>
                  </span>
                </td>
              </tr>
            </table>
          </div>
          
          <div class="col-md-6">
            <h6>説明</h6>
            <p class="text-muted">
              <%= @powerpoint.description || "説明が設定されていません。" %>
            </p>
          </div>
        </div>
        
        <div class="d-flex gap-2 flex-wrap">
          <%= link_to "プレビュー", preview_portfolio_powerpoint_path(@portfolio, @powerpoint), 
                      class: "btn btn-info", target: "_blank" %>
          <%= link_to "ダウンロード", download_portfolio_powerpoint_path(@portfolio, @powerpoint), 
                      class: "btn btn-success" %>
          <%= link_to "一覧に戻る", portfolio_powerpoints_path(@portfolio), 
                      class: "btn btn-outline-secondary" %>
          <%= link_to "ポートフォリオに戻る", @portfolio, 
                      class: "btn btn-outline-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.bg-orange {
  background-color: #fd7e14 !important;
}
</style>